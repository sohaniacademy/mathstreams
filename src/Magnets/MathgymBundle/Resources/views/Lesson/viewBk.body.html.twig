{% extends 'MagnetsMathgymBundle::base.html.twig' %}
{% block body %}
    <style>
        #topContain {
            position: relative;
        }

        .menu {
            top: 100px;
            position: fixed;
        }

        li.active a {
            color: black !important;
            font-weight: bold !important;
        }

        div.col-sm-9 div {
            height: 1000px;
            font-size: 28px;
        }

        div.col-sm-9 div div {
            height: 500px;
            font-size: 28px;
        }

        #section1 {
            color: #fff;
            background-color: #1E88E5;
        }

        #section2 {
            color: #fff;
            background-color: #673ab7;
        }

        #section3, #section11 {
            color: #fff;
            background-color: #ff9800;
        }

        #section41, #section12 {
            color: #fff;
            background-color: #00bcd4;
        }

        #section42 {
            color: #fff;
            background-color: #009688;
        }

        @media screen and (max-width: 810px) {
            #section1, #section2, #section3, #section41, #section42 {
                margin-left: 150px;
            }
        }
    </style>
    <div class="row">
        <nav class="col-sm-3" id="myScrollspy">
            <ul class="menu nav">
                <li><a href="#titleName">{{ lesson.name }}</a></li>
                <li><a href="#section1">Section 1</a></li>
                <li><a href="#section11">Section 11</a></li>
                <li><a href="#section12">Section 12</a></li>
                <li><a href="#section2">Section 2</a></li>
                <li><a href="#section3">Section 3</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Section 4 <span
                                class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#section41">Section 4-1</a></li>
                        <li><a href="#section42">Section 4-2</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div class="col-sm-9">
            <div id="topContainWrap" style="height:400px;">
                <div id="topContain" class="container-fluid tex-render" style="overflow-y: scroll">
                    <h1 style="font-weight: 900" id="titleName">{{ lesson.name }}</h1>

                    <div id="mainContain">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(function () {
            $("#mainContain").html(transView('{{ lesson.content|e('js') }}'));
            $('#topContain').scrollspy({'offset': 20});
        });
    </script>
{% endblock %}

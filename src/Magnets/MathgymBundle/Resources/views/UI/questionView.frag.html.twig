{% extends 'MagnetsMathgymBundle::frag.html.twig' %}

{% block frag_body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>{{ problem.label|raw }}</h3>
        </div>
        <div class="panel-body tex-render">
            {% set tex_src %}
                {{ problem.question|raw|nl2br }}
            {% endset %}
            {#{{ include('MagnetsMathgymBundle:UI:texArea.frag.html.twig', { tex_src: tex_src, tex_id: 'prob' }) }}#}
            {# problems will be flat.. they don't need the full engine.. #}
            {{ tex_src|[0]["val"] }}
        </div>
    </div>
{% endblock %}
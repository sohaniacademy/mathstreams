{% extends 'MagnetsMathgymBundle::blank.html.twig' %}

{% block body %}
    <h2>{{ title }}</h2>
    {{ content|truncate(50,true) }}<br />
    {#{% set idx=0 %}#}
    {#{% for ct in content[0:min(2,content|length)] %}#}
    {#<div>#}
    {#<b>{{ ct.type }}</b>:: {{ ct.val|truncate(200,true) }}#}
    {#</div>#}
    {#{% endfor %}#}
    {% if canView and hasTokens %}
        <div class="btn btn-primary solve-btn">Start solving..</div>
        <script>
            $(".solve-btn").on("click", function () {
                openPopup("{{ path('solveproblem',{ pid: id }) }}");
            });
        </script>
    {% elseif not hasTokens %}
        <div class="btn btn-primary read-btn">Start solving..</div>
    {% endif %}
    {% if canEdit %}
        <div class="btn btn-warning edit-btn">Edit</div>
    {% endif %}

    <div class="btn">
    </div>
{% endblock %}